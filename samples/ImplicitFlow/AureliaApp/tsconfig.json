{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "es2016",
      "es2016.array.include",
      "es2015",
      "es5",
      "es2015.symbol.wellknown",
      "es2015.reflect",
      "es2015.proxy",
      "es2015.promise",
      "es2015.iterable",
      "es2015.symbol",
      "es2015.generator",
      "es2015.collection",
      "es2015.core",
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}